{ 
    "name": "Googely Boogely Healthy Study Buddy",
    "version": "1.0.0",
    "description": "This is an extension to help remind users to take mental health breaks and other healthy stuff",
    "manifest_version": 3,
    "author": "Parathova, Wuzy, MicrophoneAle, Jaden Zhang",

    "background": {
        "service_worker": "background.js"
    },

    "icons":{
        "32": "ExtensionIcon.png"
    },

    "action": {
        "default_icon" : "ExtensionIcon.png",
        "default_popup": "ACTIVE.html",
        "web_accessible_resources": ["uwuduck.png"],
        "default_title": "le_app"
    },
    
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["popup.js"]
        }
      ],

      "web accessible resources": [
        {
            "resources": [ "uwuduck.png"],
            "matches": ["https://*/*"]
        }
      ],
    
    "permissions": ["activeTab"]
}